  <style>
    .update-form-container { background-color: white; border-radius: 15px;
    padding: 30px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); border: 1px solid
    #e9ecef; margin: 20px; } .update-form-header { text-align: center; color:
    #333; margin-bottom: 30px; font-size: 28px; font-weight: 700; }
    .update-form-content { display: flex; gap: 30px; align-items: flex-start; }
